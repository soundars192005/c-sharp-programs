
using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter a string:");
        string input = Console.ReadLine();

        char[] charArray = input.ToCharArray();
        Array.Reverse(charArray);
        string reversed = new string(charArray);
        Console.WriteLine("Reversed string: " + reversed);

        if (input.Length >= 2)
        {
            string substring = input.Substring(1); // index 1 is the 2nd character
            Console.WriteLine("Substring from 2nd character: " + substring);
        }
        else
        {
            Console.WriteLine("String too short to extract substring from 2nd position.");
        }

        Console.WriteLine("Enter the character you want to replace:");
        char charToReplace = Console.ReadLine()[0]; // take the first character
        string replacedString = input.Replace(charToReplace, '$');
        Console.WriteLine("String after replacement: " + replacedString);

        string copiedString = string.Copy(input);
        Console.WriteLine("Enter new value for the copied string:");
        string modifiedString = Console.ReadLine();
        
        Console.WriteLine("Original string: " + input);
        Console.WriteLine("Modified copied string: " + modifiedString);

        Console.WriteLine("Press any key to exit...");
        Console.ReadKey();
    }
}

