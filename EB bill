using System;

class EBbill
{
    static void Main()
    {
        Console.Write("Enter number of consumers: ");
        int N = int.Parse(Console.ReadLine());
        int domesticCount = 0, commercialCount = 0;
        decimal totalRevenue = 0;
        decimal highestBill = 0;
        string highestBillID = "";

        Console.WriteLine("\n--- Consumer Bills ---");

        for (int i = 0; i < N; i++)
        {
            Console.WriteLine($"\nEnter details for Consumer #{i + 1}:");

            Console.Write("Consumer ID: ");
            string consumerID = Console.ReadLine();

            Console.Write("Units Consumed: ");
            int units = int.Parse(Console.ReadLine());

            Console.Write("Connection Type (1 = Domestic, 2 = Commercial): ");
            int type = int.Parse(Console.ReadLine());

            string typeName = (type == 1) ? "Domestic" : "Commercial";

            if (type == 1) domesticCount++;
            else commercialCount++;

            decimal rate = 0;

            if (type == 1) 
            {
                if (units <= 100) rate = 1.50m;
                else if (units <= 300) rate = 2.50m;
                else rate = 4.00m;
            }
            else 
            {
                if (units <= 200) rate = 5.00m;
                else if (units <= 500) rate = 6.50m;
                else rate = 8.00m;
            }

            decimal baseCharge = units * rate;

            decimal surcharge = baseCharge * 0.03m;
            decimal penalty = (units > 500) ? 200m : 0m;

            decimal totalBeforeDiscount = baseCharge + surcharge + penalty;

            decimal discount = 0;
            if (totalBeforeDiscount > 2000)
                discount = totalBeforeDiscount * 0.05m;

            decimal finalBill = totalBeforeDiscount - discount;

            totalRevenue += finalBill;

            if (finalBill > highestBill)
            {
                highestBill = finalBill;
                highestBillID = consumerID;
            }

          
            Console.WriteLine($"{consumerID} {typeName} Units:{units} " +
                              $"Base:{baseCharge:F2} Surcharge:{surcharge:F2} " +
                              $"Penalty:{penalty:F2} Discount:{discount:F2} Final:{finalBill:F2}");
        }
      
        Console.WriteLine("\n--- Summary ---");
        Console.WriteLine($"Total Consumers: {N}");
        Console.WriteLine($"Total Revenue: ₹{totalRevenue:F2}");
        Console.WriteLine($"Highest Bill: {highestBillID} ₹{highestBill:F2}");
        Console.WriteLine($"Domestic: {domesticCount}  Commercial: {commercialCount}");
    }
}
