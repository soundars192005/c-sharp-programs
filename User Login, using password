using System;

class Program
{
    static void Main()
    {
        string validLogin = "admin";
        string validPassword = "password123";

        int attempts = 0;
        bool isAuthenticated = false;

        while (attempts < 3 && !isAuthenticated)
        {
            Console.Write("Enter login: ");
            string login = Console.ReadLine();

            Console.Write("Enter password: ");
            string password = Console.ReadLine();

            if (login == validLogin && password == validPassword)
            {
                Console.WriteLine("Login successful! Welcome.");
                isAuthenticated = true;
            }
            else
            {
                attempts++;
                Console.WriteLine($"Invalid login or password. Attempt {attempts} of 3.\n");
            }
        }

        if (!isAuthenticated)
        {
            Console.WriteLine("Too many failed attempts. Access denied.");
        }

        Console.WriteLine("Press any key to exit...");
        Console.ReadKey();
    }
}

